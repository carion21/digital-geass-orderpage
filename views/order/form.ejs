<!-- Formulaire -->
<div class="bg-light p-4 rounded">
    <h3 class="text-center text-success">
        Obtenez votre pack maintenant pour seulement <%= tunnel.price %> FCFA !
    </h3>
    <% if (locals.error) { %>
        <div class="alert alert-danger">
            <strong>Erreur!</strong> <%= locals.error %>
        </div>
    <% } %>
    <form method="POST" class="mt-4 needs-validation mb-2"
        id="order-form"
        action="/order/<%= tunnel.short_code %>">
        <div class="mb-3">
            <label for="lastname" class="form-label">Votre nom</label>
            <input type="text" id="lastname" name="lastname" class="form-control" 
                placeholder="Entrez votre nom"
                value="<% if (locals.rbody) { %><%= rbody.lastname %><% } %>"
                required>
            <div class="invalid-feedback position-absolute start-0 top-100">
                S'il vous plaît, entrez un nom valide!
            </div>
        </div>
        <div class="mb-3">
            <label for="firstname" class="form-label">Votre prénom</label>
            <input type="text" id="firstname" name="firstname" class="form-control"
                placeholder="Entrez votre prénom"
                value="<% if (locals.rbody) { %><%= rbody.firstname %><% } %>"
                required>
            <div class="invalid-feedback position-absolute start-0 top-100">
                S'il vous plaît, entrez un prénom valide!
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Votre email</label>
            <input type="email" id="email" name="email" class="form-control"
                placeholder="Entrez votre email"
                value="<% if (locals.rbody) { %><%= rbody.email %><% } %>"
                required>
            <div class="invalid-feedback position-absolute start-0 top-100">
                S'il vous plaît, entrez un email valide!
            </div>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">
                Votre numéro whatsapp
            </label>
            <span>
                <small class="text-muted">
                    (Exemple : +225 12 34 56 78 - Incluez l'indicatif de votre pays)
                </small>
            </span>
            <div class="input-group">
                <div class="input-group input-group-sm">
                    <input type="hidden"
                        name="dialcode"
                        id="dialcode"
                        value="+225">
                    <input id="phone" name="phone" type="tel" class="form-control">
                </div>
            </div>
            <div class="invalid-feedback position-absolute start-0 top-100">
                S'il vous plaît, entrez un numéro de téléphone valide!
            </div>
        </div>
        <button type="submit" id="submit"
            class="btn btn-success w-100">
            VALIDER LA COMMANDE
        </button>
    </form>
</div>
